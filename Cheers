<body>
  <h1>Canvas Collective</h1>
  <canvas id="qrCanvas" width="300" height="300" role="img" aria-label="Canvas Collective QR code"></canvas>

  <script>
    // Set the destination URL for your QR code here:
    const url = "https://canvascollective.org";
    new QRious({
      element: document.getElementById('qrCanvas'),
      size: 300,
      value: url,
      level: 'H',
      background: 'white',
      foreground: 'black'
    });
  </script>
